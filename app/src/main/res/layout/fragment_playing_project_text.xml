<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp">

    <TextView
        android:id="@+id/pptf_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ppf_now_playing"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pptf_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ppf_description"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pptf_title"/>

    <TextView
        android:id="@+id/pptf_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ppf_description"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pptf_description_title" />

    <TextView
        android:id="@+id/pptf_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ppf_instructions"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pptf_description" />

    <Button
        android:id="@+id/pptf_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ButtonError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/ppf_stop"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/pptf_instructions" />
</androidx.constraintlayout.widget.ConstraintLayout>